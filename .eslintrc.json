{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "prettier"
  ],
  "rules": {
      "no-undef":"error",
      "eqeqeq":"error",
      "react/display-name": "off",
      "react/no-unescaped-entities": "off",
      "prettier/prettier": [
          "error",
          {
              "singleQuote": true,
              "endOfLine": "auto"
          }
      ],
      "react/prop-types": "off",
      "react/no-escape-entities": "off",
      "no-unused-vars":"warn",
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}
